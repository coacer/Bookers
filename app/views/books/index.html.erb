<p class="success"><%= flash[:success] %></p>
<h1>Books</h1>

<table class="index-table">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
        <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
        <%= link_to "Destroy", book_path(book),
          method: :delete,
          "data-confirm" => "Are you sure?",
          class: "destroy_#{book.id}" %>
      </td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
<%= form_for @book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: "book_title" %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body, class: "book_body" %><br>

  <%= f.submit 'Create Book' %>
<% end %>
