<h1>Editing Book</h1>
<%= form_for @book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: "book_title" %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body, class: "book_body" %><br>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>
<%= link_to "Back", books_path, class: "back" %>


